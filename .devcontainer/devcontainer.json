{
  "name": "Autoware",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "autoware",
  "hostRequirements": {
    "gpu": true
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined",
    "--net=host",
    "--volume=/etc/localtime:/etc/localtime:ro",
    "--gpus",
    "all"
  ],
  "customizations": {
    "vscode": {
      "settings.json": {
        "terminal.integrated.profiles.linux": { "bash": { "path": "/bin/bash" } }
      }
    }
  }
}
